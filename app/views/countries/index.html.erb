<p id="notice"><%= notice %></p>

<div class="container-fluid">
<nav class="navbar navbar-light bg-light justify-content-between">
  <a class="navbar-brand">Countries</a>
    

<table class="table table-sm table-striped " >
  <thead class="thead-dark" >
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.id %></td>
        <td><%= country.name %></td>
        <td><%= country.code %></td>
        <td><%= link_to 'Show', country, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_country_path(country), class: "btn btn-primary"  %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Country', new_country_path, class: "btn btn-info" %>
